%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= "Issue Tracker - Administration"
    = csrf_meta_tags
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"

  %body
    .navbar.navbar-static-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Issue Tracker
          .container.nav-collapse
            %ul.nav

              /%li= link_to "Admin", '#'
              %li= current_user ? link_to("Log Out", destroy_user_session_path, method: :delete) : link_to("Sign In", new_user_session_path)

    .container
      = yield


